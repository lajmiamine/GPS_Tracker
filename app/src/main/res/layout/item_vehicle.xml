<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutItemNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    android:clickable="true"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/md_white_1000"
        android:layout_margin="6dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_post_item"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_contact_icon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Veh_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="26sp"
                    android:text="This is the title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/md_text" />

                <TextView
                    android:id="@+id/Veh_Matricule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="Content to be filled"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vitesse"
                    android:layout_toLeftOf="@+id/kh"
                    android:textColor="@color/md_black_1000"
                    android:text="11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:layout_height="wrap_content"
                    android:id="@+id/kh"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text=" k/h"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vitesse"
                    android:textColor="@color/md_black_1000"
                    android:layout_toLeftOf="@+id/celsius"
                    android:id="@+id/temperature"
                    android:text="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vitesse"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/celsius"
                    android:text=" Â°"/>

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>